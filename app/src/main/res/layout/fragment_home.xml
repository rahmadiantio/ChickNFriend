<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:gravity="center">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/app_icon"/>
    </RelativeLayout>
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="0dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_obj">
            <LinearLayout
                android:id="@+id/ll_salad"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/kategori_ayam"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12dp"
                    android:text="Ayam"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_burger"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/kategori_burger"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGreen"
                    android:textSize="12dp"
                    android:text="burger"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_minuman"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/kategori_minuman"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlue"
                    android:textSize="12dp"
                    android:text="Minuman"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_dessert"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/kategori_dessert"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPurple"
                    android:textSize="12dp"
                    android:text="Dessert"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_breakfast"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/kategori_breakfast"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:textSize="12dp"
                    android:text="Breakfast"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragment.HomeFragment"
            android:orientation="vertical"
            android:background="@android:color/white">
            <!-- RECOMMENDED -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommended"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="0dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_all_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- BURGER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Burger"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"/>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="0dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_burger_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_get_all_burger"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="5dp"
                        card_view:cardCornerRadius="15dp"
                        card_view:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_chevron_right_black_24dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:text="Selengkapnya"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- SALAD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salad"
                    android:textColor="@color/colorGreen"
                    android:textStyle="bold"/>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="0dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_salad_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_get_all_salad"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="5dp"
                        card_view:cardCornerRadius="15dp"
                        card_view:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_chevron_right_black_24dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:text="Selengkapnya"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- MINUMAN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minuman"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"/>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="0dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_minuman_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_get_all_minuman"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="5dp"
                        card_view:cardCornerRadius="15dp"
                        card_view:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_chevron_right_black_24dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:text="Selengkapnya"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- DESSERT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dessert"
                    android:textColor="@color/colorPurple"
                    android:textStyle="bold"/>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="0dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_dessert_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_get_all_dessert"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="5dp"
                        card_view:cardCornerRadius="15dp"
                        card_view:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_chevron_right_black_24dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:text="Selengkapnya"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- BREAKFAST -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breakfast"
                    android:textColor="@color/colorRed"
                    android:textStyle="bold"/>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="0dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_breakfast_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_get_all_breakfast"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="5dp"
                        card_view:cardCornerRadius="15dp"
                        card_view:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_chevron_right_black_24dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:text="Selengkapnya"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="50dp">
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>